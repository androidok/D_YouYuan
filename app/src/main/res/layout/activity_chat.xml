<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:hyphenate="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:id="@+id/chatactivity_llid"

              android:weightSum="1">

    <TextView android:layout_width="match_parent"
              android:background="#66ffff"
              android:layout_height="10dp"/>


    <RelativeLayout
        android:background="#66ffff"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        >



        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:gravity="center"
                  android:textColor="#000000"
                  android:layout_marginTop="18dp"
                  android:text="1111111"
                  android:id="@+id/chatactivity_tvtitle"

        />
    </RelativeLayout>


    <com.aspsine.irecyclerview.IRecyclerView

        android:id="@+id/chatactivity_recycle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:layout_weight="1"
    />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#cccccc"/>


    <LinearLayout
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:id="@+id/container_buttom"
        android:layout_height="44dp">

        <Button
            android:gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:layout_width="33dp"
            android:id="@+id/chatactivity_bt3"
            android:layout_height="33dp"
            android:background="@drawable/ease_chatting_setmode_voice_btn"/>


        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:visibility="gone"
            android:id="@+id/chatting_luyinneirong_btn"

            android:text="点击录音"/>

        <baway.com.dyouyuan.customview.EditTextPreIme
            android:id="@+id/chatactivity_et"
            android:gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_weight="1"

            android:layout_height="match_parent" />

        <Button
            android:id="@+id/voice_btn1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/button_recordnormal"
            android:gravity="center"
            android:minHeight="0dp"
            android:padding="5dp"
            android:text="@string/normal"
            android:textColor="#727272"
            android:visibility="gone"></Button>

        <Button android:id="@+id/chatactivity_bt1" android:layout_width="40dp"
                android:layout_height="35dp"

                android:background="@drawable/ease_chatting_setmode_xiaolian_btn"

                android:layout_marginLeft="5dp"
                android:padding="4dp"
        />
        <Button android:id="@+id/chatactivity_bt2" android:layout_width="40dp"
                android:layout_height="35dp"
                android:background="@drawable/ease_type_select_btn"
                android:layout_marginLeft="5dp"
                android:padding="4dp"

        />

        <Button android:id="@+id/chatactivity_bt33" android:layout_width="50sp"
                android:layout_height="35dp"
                android:text="发送"
                android:visibility="gone"
                android:background="#ffff00"
                android:layout_marginLeft="5dp"
                android:padding="4dp"

        />

    </LinearLayout>

    <LinearLayout
        android:background="#ffffff"
        android:orientation="horizontal"
        android:id="@+id/chatactivity_ll"

        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    </LinearLayout>


    <LinearLayout
android:background="#ffffff"
        android:orientation="horizontal"
        android:id="@+id/chatactivity_shipin"

        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView android:layout_width="50dp"
                   android:src="@drawable/ic_voice_tel"
                   android:id="@+id/chatactivity_shipin_iv"
                   android:layout_height="50dp"/>

        <ImageView android:layout_width="50dp"
                   android:layout_marginLeft="15dp"
                   android:src="@drawable/xiangji"
                   android:id="@+id/chatactivity_paizhao"
                   android:layout_height="50dp"/>

        <ImageView android:layout_width="50dp"
                   android:layout_marginLeft="15dp"
                   android:src="@drawable/xiangce"
                   android:id="@+id/chatactivity_xiangce"
                   android:layout_height="50dp"/>


    </LinearLayout>




</LinearLayout>
