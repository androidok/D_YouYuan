<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:background="#ffffff"
                android:layout_height="match_parent">

    <TextView android:layout_width="wrap_content"
              android:id="@+id/photo_chat_time"
              android:layout_centerHorizontal="true"
              android:text="1111111"
              android:gravity="center"
              android:background="#cccccc"
android:layout_alignParentTop="true"
              android:textColor="#000000"
              android:visibility="gone"
              android:layout_height="wrap_content"/>


    <LinearLayout
        android:id="@+id/photo_you_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/photo_chat_time"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">




        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/photo_you_photo"
                android:layout_centerInParent="true"
                android:paddingLeft="12dp"
                android:layout_marginTop="20dp"
                android:paddingRight="10dp"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:scaleType="centerCrop" />
        </LinearLayout>




        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@mipmap/ic_launcher" />

            <TextView
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="我" />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/photo_zuo_receive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentTop="true" android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/photo_receive_touxiang"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@mipmap/ic_launcher" />

            <TextView
                android:textColor="#000000"
                android:id="@+id/photo_receive_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:text="她" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/image_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"

            >
            <!--baway.com.dyouyuan.customview.BubbleImageView-->
            <ImageView
                android:layout_marginLeft="10dp"
                android:id="@+id/photo_zuo_photo"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:paddingLeft="10dp"
                android:paddingRight="12dp"
                android:layout_centerInParent="true"
                android:layout_marginTop="20dp"
                android:scaleType="centerCrop" />
        </LinearLayout>




    </LinearLayout>


</RelativeLayout>