<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_video"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="baway.com.dyouyuan.activity.VideoActivity">

    <FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.hyphenate.media.EMCallSurfaceView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/surface_big"/>

    <com.hyphenate.media.EMCallSurfaceView
    android:layout_width="100dp"
    android:layout_height="100dp"
    android:id="@+id/surface_small"/>
    </FrameLayout>

<TextView android:layout_width="wrap_content"
          android:layout_height="wrap_content"
android:text="111111"
          android:layout_marginTop="20dp"
          android:textColor="#ffffff"
          android:layout_centerHorizontal="true"
          android:id="@+id/videoactivity_tv"
/>

    <ImageView android:layout_width="30dp"
              android:layout_height="30dp"
              android:src="@drawable/ic_launcher"
              android:layout_marginTop="30dp"
              android:textColor="#ffffff"
           android:layout_alignParentRight="true"
              android:id="@+id/videoactivity_ivqiehuan"
    />

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
    android:orientation="horizontal"
              android:layout_alignParentBottom="true"

    >

        <Button
            android:text="接听"
            android:id="@+id/videoactivity_bt_jieting"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>

        <Button
            android:text="挂断"
            android:id="@+id/videoactivity_bt_guaduan"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>

        <Button
            android:text="拒接"
            android:id="@+id/videoactivity_bt_jujie"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>

    </LinearLayout>





</RelativeLayout>
